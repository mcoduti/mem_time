<div class="page-header">
  <h1>
    Stats:
    <!-- <a href="/attempts/new" class="btn btn-lg btn-success">New Attempt</a> -->
  </h1>
</div>



<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Chin</th>
        <th>Engl</th>
        <th>Phon</th>
        <th>#</th>
        <th>%</th>
      </tr>

      <% @unique_id.each do |row| %>
      <tr>
        <td><%= Character.find_by(:id => row.character_id).character %></td>
        <td><%= Character.find_by(:id => row.character_id).translation %></td>
        <td><%= Character.find_by(:id => row.character_id).english_spelling %></td>
        <td><%= Attempt.where(:character_id => row.character_id, :user_id => current_user.id).count %></td>
        <td><%= (Attempt.where(:character_id => row.character_id, :correct => true, :user_id => current_user.id).count.to_f / Attempt.where(:character_id => row.character_id, :user_id => current_user.id).count.to_f * 100).round(2) %>%</td>

      </tr>
      <% end %>
    </table>
  </div>
</div>



