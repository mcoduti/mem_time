<!-- Validation failure messages -->
<% if @attempt.errors.any? %>
  <% @attempt.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Attempt #<%= @attempt.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_attempt/<%= @attempt.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for correct -->
      <div class="checkbox">
        <label for="correct">
          <input type="checkbox" id="correct" name="correct" value="1" <%= "checked" if @attempt.correct %>>
          Correct
        </label>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @attempt.user_id %>">
      </div>

      <!-- Label and input for character_id -->
      <div class="form-group">
        <label for="character_id" class="control-label">
          Character
        </label>

        <input type="text" id="character_id" name="character_id" placeholder="Character" class="form-control" value="<%= @attempt.character_id %>">
      </div>

      <button class="btn btn-warning">
        Update Attempt
      </button>
      or
      <a href="/attempts/<%= @attempt.id %>">Cancel</a>
    </form>
  </div>
</div>
